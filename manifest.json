{
  "manifest_version": 3,
  "name": "JobFlow - Job Application Tracker",
  "version": "1.0.0",
  "description": "Track job applications seamlessly. Save jobs from LinkedIn and career sites directly to Google Sheets.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "identity",
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://*/*"
  ],
  "oauth2": {
    "client_id": "YOUR_OAUTH_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://linkedin.com/jobs/*"
      ],
      "js": ["content/linkedin.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*/*"
      ],
      "js": ["content/universal.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle",
      "exclude_matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
